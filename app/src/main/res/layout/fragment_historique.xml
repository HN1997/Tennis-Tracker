<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".Historique"
    android:background="#E47B35">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">


            <TextView
                android:id="@+id/titleHistorique"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/historique"
                android:textColor="#000000"
                android:textSize="24sp"
                android:gravity="center"
                />

            <LinearLayout
                android:id="@+id/container_matchs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/resumer_match"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="" />
            </LinearLayout>

            <Button
                android:id="@+id/viewDataButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/voir_historique" />

            <Button
                android:id="@+id/buttonRetourMainMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/retour_au_menu" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>